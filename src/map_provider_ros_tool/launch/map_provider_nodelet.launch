<launch>

    <arg name="config" default="$(find map_provider_ros_tool)/launch/params/map_provider_parameters.yaml"/>
    <arg name="nodelet_manager_name" default="nodelet_manager_map_provider"/>
    <arg name="start_nodelet_manager" default="true"/>
    <arg name="nodelet_name" default="map_provider"/>

    <!-- Nodelet manager (if enabled) -->
    <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager_name)" args="manager" output="screen"
          if="$(arg start_nodelet_manager)"/>

    <!-- MapProvider -->
    <node pkg="nodelet" type="nodelet" name="$(arg nodelet_name)"
          args="load map_provider_ros_tool/MapProviderNodelet $(arg nodelet_manager_name)" output="screen" required="true">
        <rosparam command="load" file="$(arg config)"/>
    </node>

</launch>
